<Window x:Class="Marv.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:m="clr-namespace:Marv.Xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="24"></RowDefinition>
        </Grid.RowDefinitions>
        
        <WebBrowser Grid.Row="0" m:BrowserBehavior.Html="{Binding Html}" />
        <StatusBar Grid.Row="1">
            <StatusBarItem HorizontalAlignment="Left" Content="{Binding LastWriteTime}"/>
            <Separator/>
            <StatusBarItem HorizontalAlignment="Stretch" Content="{Binding PathToSource}"/>
        </StatusBar>
    </Grid>
</Window>
